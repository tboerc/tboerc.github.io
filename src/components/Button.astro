---
import type { HTMLTag, Polymorphic } from 'astro/types'
import { cva, type VariantProps } from 'class-variance-authority'
import { twMerge } from 'tailwind-merge'

const button = cva('uppercase px-6 py-3 w-fit text-center', {
	variants: {
		type: {
			outlined: 'border border-black hover:bg-black hover:text-white hover:transition-colors',
			filled: 'border border-black bg-black text-white hover:bg-white hover:text-black hover:transition-colors'
		},
		size: {
			normal: 'text-base',
			large: 'text-lg'
		}
	},
	defaultVariants: {
		type: 'outlined',
		size: 'normal'
	}
})

type Props<Tag extends HTMLTag> = Polymorphic<{
	as: Tag
	class?: string
}> &
	VariantProps<typeof button>

const { type, size, class: className, as: Tag = 'button', ...props } = Astro.props
---

<Tag {...props} class={twMerge(button({ className, type, size }))}>
	<slot />
</Tag>
