---
type Props = {
	href: string
	class?: string
}

const { href, class: className } = Astro.props

const isExternal = href.startsWith('http')
---

<a
	href={href}
	target={isExternal ? '_blank' : null}
	rel={isExternal ? 'noopener noreferrer' : null}
	class:list={['text-violet-700 underline', className]}
>
	<slot />
</a>
