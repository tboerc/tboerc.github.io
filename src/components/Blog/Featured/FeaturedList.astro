---
import type { CollectionEntry } from 'astro:content'
import FeaturedItem from '@components/Blog/Featured/FeaturedItem.astro'

type Props = {
	list: CollectionEntry<'blog'>[]
}

const { list } = Astro.props
---

<ul class="dark flex flex-col gap-6 px-4 py-6 text-white sm:flex-row md:gap-8 md:px-6 md:py-8">
	{list.map((item) => <FeaturedItem item={item} />)}
</ul>
