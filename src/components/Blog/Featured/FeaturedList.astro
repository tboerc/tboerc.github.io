---
import type { CollectionEntry } from 'astro:content'
import FeaturedItem from '@components/Blog/Featured/FeaturedItem.astro'

type Props = {
	list: CollectionEntry<'blog'>[]
}

const { list } = Astro.props
---

<ul
	class="flex flex-col divide-y divide-solid divide-black sm:flex-row sm:gap-6 sm:divide-y-0 sm:px-4 sm:py-6 md:gap-8 md:px-6 md:py-8"
>
	{list.map((item) => <FeaturedItem item={item} />)}
</ul>
