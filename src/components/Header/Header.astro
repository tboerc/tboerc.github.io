---
import MenuList from '@components/Header/Menu/MenuList.astro'
import Wrapper from '@components/Wrapper.astro'
import Title from '@components/Title.astro'
import { i18n } from '@i18n/index'

const { t } = i18n(Astro.url)
---

<header class="border-b border-black dark:border-white">
	<Wrapper as="div" class="flex flex-col p-4 md:p-6">
		<Title as="span" type="h1" class="max-[360px]:text-4xl">Tiago Boer Casagrande</Title>
		<Title as="span" type="h1" class="text-right max-[360px]:text-4xl">
			<span
				class="bg-black leading-tight text-white dark:bg-white dark:text-black"
				set:html={t('header.softwareEngineer')}
			/>
		</Title>
	</Wrapper>
</header>
<nav class="sticky top-0 z-10 border-b border-black bg-white dark:border-white dark:bg-black">
	<Wrapper as="div" class="flex overflow-auto p-4 md:px-6">
		<MenuList />
	</Wrapper>
</nav>
