---
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import { i18n } from '@i18n/index'

export type Props = {
	title: string
	description?: string
}

const { t } = i18n(Astro.url)

const { title, description } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<title>{title} - {t('meta.by')}</title>
		{description && <meta name="description" content={description} />}

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Oswald:wght@600&family=Poppins:ital,wght@0,400;0,700;1,400;1,700&display=swap"
		/>
	</head>
	<body>
		<Header />
		<div class="dot-background">
			<slot />
		</div>
		<Footer />
	</body>
</html>

<style>
	.dot-background {
		background-color: #ffffff;
		background-image: radial-gradient(#000000 2px, transparent 2px), radial-gradient(#000000 2px, #ffffff 2px);
		background-size: 80px 80px;
		background-position:
			0 0,
			40px 40px;
	}
</style>
