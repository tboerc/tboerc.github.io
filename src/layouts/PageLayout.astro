---
import { twMerge } from 'tailwind-merge'
import BaseLayout, { type Props as BaseLayoutProps } from '@layouts/BaseLayout.astro'

type Props = { class?: string } & BaseLayoutProps

const { class: className, ...baseLayoutProps } = Astro.props
---

<BaseLayout {...baseLayoutProps}>
	<main
		class={twMerge('container flex min-h-screen flex-col px-4 py-6 md:px-6 md:py-8 2xl:max-w-screen-xl', className)}
	>
		<slot />
	</main>
</BaseLayout>
