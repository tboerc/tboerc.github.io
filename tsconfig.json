{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"verbatimModuleSyntax": true,
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@i18n/*": ["src/i18n/*"],
			"@layouts/*": ["src/layouts/*"],
			"@schemas/*": ["src/schemas/*"]
		}
	}
}
